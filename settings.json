{
        "servicerestart": "/usr/local/bin/plugin_restart.sh",
        "serviceget": "/usr/local/bin/plugin_get.sh",
        "serviceset": "/usr/local/bin/plugin_set.sh",
        "options": {
                "add_thing": {
                        "type": "add",
                        "name": "Add A thing",
                        "description": "Add a thing with arguments",
                        "requiredargs": {
                                "password_type": {
                                        "type": "password",
                                        "description": "Password Thing"
                                },
                                "string_type": {
                                        "type": "string",
                                        "description": "String Thing"
                                }
                        },
                        "optionalargs": {
                                "bool_type_arg": { 
                                        "type": "bool",
                                        "description": "There are 10 types of people."
                                }
                        }
                },
                "int_type": {
                        "type": "int",
                        "name": "An Integer",
                        "description": "16, 32, 64, 128 bit? No one knows.</embedded>",
                        "range": "1024-32000",
                        "default": "31337",
                        "requirerestart": true
                },
                "bool_type": {
                        "type": "bool",
                        "name": "A Bool",
                        "description": "Do Bool Things",
                        "default": true,
                        "requirerestart": true

                },
                "combo_type": {
                        "type": "combo",
                        "name": "Combo",
                        "description": "C-C-C-Combo.",
                        "requirerestart": true,
                        "default": "dolor",
                        "options": {
                                        "ipsum": "<javascript src='injected!'>Ipsum",
                                        "lorem": "Lo<b>R</b>eM",
                                        "dolor": "Dolor!!"
                        }
                },
                "delete_type": {
                        "type": "delete",
                        "name": "Delete A Thing",
                        "description": "Baleted."
                }

        }
}

